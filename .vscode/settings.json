{
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.configureOnOpen": true,
    "editor.formatOnSave": true,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.intelliSenseEngine": "default",
    "files.associations": {
        "*.vert": "glsl",
        "*.frag": "glsl",
        "*.comp": "glsl"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "build/**": false
    },
    "C_Cpp.exclusionPolicy": "checkFilesystem",
    "glsllint.glslangValidatorPath": "${env:VULKAN_SDK}/bin/glslangValidator",
    "glsl-linter.validatorPath": "${env:VULKAN_SDK}/bin/glslangValidator",
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.h": "${capture}.cpp,${capture}.hpp,${capture}.inl"
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[glsl]": {
        "editor.defaultFormatter": "raczzalan.webgl-glsl-editor"
    }
}